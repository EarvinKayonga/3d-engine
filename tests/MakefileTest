CC 	=	g++
CFLAGS 	=	-W -Wall -Werror -Wextra -g
NAME	=	TestBin
RM	=	rm -f
SRC 	=	src/test.cpp			\
		../src/Vector/vector.cpp	\
		../src/Person/person.cpp

OBJ	=	$(SRC:%.cpp=%.o)

$(NAME):	$(OBJ)
		$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

all:		$(NAME)

clean:
		$(RM) $(OBJ)

fclean:			clean
		$(RM) $(NAME)

re:		fclean all

.PHONY: all  clean
